@page
@using Managers
@model Clients.Web.Pages.Recipes.IndexModel
@{
}

<a class="btn btn-success" asp-page="CreateRecipe">Add Recipe</a>

@if(Model.Recipes == null || !Model.Recipes.Any())
{
    <p>No recipes</p>
}
else
{
    <ul>
        @foreach(Recipe recipe in Model.Recipes)
        {
            <li><a asp-page="Details" asp-route-id="@recipe.Id.id">@recipe.Title</a></li>
        }

    </ul>
}
